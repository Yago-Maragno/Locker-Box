<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Escolha_locker">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:id="@+id/linhas"
        android:layout_width="808dp"
        android:layout_height="269dp"
        android:src="@drawable/linhas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/locker"
        android:layout_width="196dp"
        android:layout_height="61dp"
        android:text="LOCKER"
        android:textColor="@color/amarelo_box"
        android:textSize="50sp"
        android:fontFamily="@font/poppins_thin"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/escolha_locker"
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:text="Escolha um Locker"
        android:textColor="@color/branco_letras"
        android:textSize="40sp"
        android:fontFamily="@font/poppins_thin"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/linhas"
        app:layout_constraintStart_toStartOf="@id/linhas"
        app:layout_constraintTop_toBottomOf="@id/locker"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="50dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/escolha_botao02"
        style="@style/botao"
        android:background="@drawable/botao"
        app:layout_constraintEnd_toEndOf="@id/locker"
        app:layout_constraintStart_toStartOf="@id/escolha_locker"
        app:layout_constraintTop_toBottomOf="@id/escolha_locker"
        android:hint="2"
        android:fontFamily="@font/poppins_thin"
        android:textStyle="bold"
        android:layout_marginLeft="200dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/escolha_botao04"
        style="@style/botao"
        android:background="@drawable/botao"
        app:layout_constraintEnd_toEndOf="@id/escolha_botao02"
        app:layout_constraintStart_toStartOf="@id/escolha_botao02"
        app:layout_constraintTop_toBottomOf="@id/escolha_botao02"
        android:hint="4"
        android:fontFamily="@font/poppins_thin"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/escolha_botao06"
        style="@style/botao"
        android:background="@drawable/botao"
        app:layout_constraintEnd_toEndOf="@id/escolha_botao02"
        app:layout_constraintStart_toStartOf="@id/escolha_botao02"
        app:layout_constraintTop_toBottomOf="@id/escolha_botao04"
        android:hint="6"
        android:fontFamily="@font/poppins_thin"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/escolha_botao08"
        style="@style/botao"
        android:background="@drawable/botao"
        app:layout_constraintEnd_toEndOf="@id/escolha_botao02"
        app:layout_constraintStart_toStartOf="@id/escolha_botao02"
        app:layout_constraintTop_toBottomOf="@id/escolha_botao06"
        android:hint="8"
        android:fontFamily="@font/poppins_thin"
        android:textStyle="bold"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/escolha_botao01"
        style="@style/botao"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/botao"
        android:fontFamily="@font/poppins_thin"
        android:hint="1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/escolha_botao02"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/escolha_locker"
        app:layout_constraintEnd_toStartOf="@id/escolha_locker"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/escolha_botao03"
        style="@style/botao"
        android:background="@drawable/botao"
        app:layout_constraintEnd_toEndOf="@id/escolha_botao01"
        app:layout_constraintStart_toStartOf="@id/escolha_botao01"
        app:layout_constraintTop_toBottomOf="@id/escolha_botao01"
        android:hint="3"
        android:fontFamily="@font/poppins_thin"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/escolha_botao05"
        style="@style/botao"
        android:background="@drawable/botao"
        app:layout_constraintEnd_toEndOf="@id/escolha_botao03"
        app:layout_constraintStart_toStartOf="@id/escolha_botao03"
        app:layout_constraintTop_toBottomOf="@id/escolha_botao03"
        android:hint="5"
        android:fontFamily="@font/poppins_thin"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/escolha_botao07"
        style="@style/botao"
        android:background="@drawable/botao"
        app:layout_constraintEnd_toEndOf="@id/escolha_botao05"
        app:layout_constraintStart_toStartOf="@id/escolha_botao05"
        app:layout_constraintTop_toBottomOf="@id/escolha_botao05"
        android:hint="7"
        android:fontFamily="@font/poppins_thin"
        android:textStyle="bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>